<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="primary">
		<!-- JNDI DO BANCO DE DADOS -->
		<jta-data-source>java:jboss/datasources/TransporteDS</jta-data-source>

		<!-- security entities -->
		<class>com.mksdev.framework.security.entity.User</class>
		<class>com.mksdev.framework.security.entity.Role</class>
		<class>com.mksdev.framework.security.entity.Plan</class>
		<class>com.mksdev.framework.security.entity.PasswordReset</class>
		<class>com.mksdev.framework.security.entity.UserConfirm</class>
		
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<!-- 
			    none: no make changes. 
			    validate: validate the schema, makes no changes to the database. 
				update: update the schema. create: 
				creates the schema, destroying previous data. 
				create-drop: drop the schema at the end of the session. 
			-->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.show_parameters" value="true" />

			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="30" />
			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.c3p0.timeout" value="1800" />
		</properties>
	</persistence-unit>

</persistence>