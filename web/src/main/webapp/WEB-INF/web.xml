<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="Transporte" version="3.0">

	<display-name>MKS - Transporte</display-name>

	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.FACELETS_RESOURCE_RESOLVER</param-name>
		<param-value>com.mksdev.framework.base.resolver.ClassPathResolver</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Production</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- FILTRO DE SEGURANÇA DO FRAMEWORK -->
	<!-- DOCUMENTÇÃO EM: http://10.13.30.148:8070/confluence/pages/viewpage.action?pageId=2588699 -->
	<filter>
		<filter-name>Security Filter</filter-name>
		<filter-class>com.mksdev.framework.base.filter.SecurityFilterImpl</filter-class>
		<init-param>
			<param-name>userParameterName</param-name>
			<param-value>user</param-value>
		</init-param>
		<init-param>
			<param-name>logParameterName</param-name>
			<param-value>log</param-value>
		</init-param>
		<init-param>
			<param-name>validateSecurity</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>forceUTF8CharSet</filter-name>
		<filter-class>com.mksdev.framework.base.filter.impl.CharacterEncodingFilterImpl</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>forceUTF8CharSet</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Security Filter</filter-name>

		<url-pattern>/private/*</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>401</error-code>
		<location>/error/error401.jsf</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/error401.jsf</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/error500.jsf</location>
	</error-page>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>


	<!-- SECURITY -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>deny all except myLdapRole1</web-resource-name>
			<url-pattern>/private/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>PUT</http-method>
			<http-method>HEAD</http-method>
			<http-method>OPTIONS</http-method>
			<http-method>TRACE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Transporte</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>exception: public access</display-name>
		<web-resource-collection>
			<web-resource-name>Public Access</web-resource-name>
			<url-pattern>/public/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-role>
		<role-name>Transporte</role-name>
	</security-role>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>SecurityRealm</realm-name>
		<form-login-config>
			<form-login-page>/security/login.jsf</form-login-page>
			<form-error-page>/security/login.jsf</form-error-page>
		</form-login-config>
	</login-config>

	<!-- VALIDAR TIMEOUT DA SESSION -->
	<session-config>
		<session-timeout>-1</session-timeout>
	</session-config>

</web-app>